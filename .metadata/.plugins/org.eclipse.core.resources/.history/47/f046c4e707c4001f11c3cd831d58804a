package Main;

public class Main {
    public static void main(String[] args) {
        Point p1 = new Point(1, 2);
        Point p2 = new Point(4, 6);
        Line line = new Line(p1, p2);

        System.out.println("Start Point: (" + line.getStartPoint().getX() + ", " + line.getStartPoint().getY() + ")");
        System.out.println("End Point: (" + line.getEndPoint().getX() + ", " + line.getEndPoint().getY() + ")");
        System.out.println("Length: " + line.getLength());
        
        System.out.println("Edit new Startpoint and Endpoint");
        Point newStartPoint = new Point(1, 2);
        line.setStartPoint(newStartPoint);

        Point newEndPoint = new Point(4, 8);
        line.setEndPoint(newEndPoint);

        System.out.println("New Startpoint: (" + line.getStartPoint().getX() + ", " + line.getStartPoint().getY() + ")");
        System.out.println("New Endpoint: (" + line.getEndPoint().getX() + ", " + line.getEndPoint().getY() + ")");

        System.out.println("New Length: " + line.getLength());
    }
}
